<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.usrymichael.mobileplayer.MainActivity" >

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="170dp"
        android:text="@string/btn_stop" />

    <Button
        android:id="@+id/btn_forward"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_forward"
        android:layout_alignBaseline="@+id/btn_back"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_play"
        android:layout_above="@+id/btn_back"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_back"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="@string/btn_back"
        android:layout_below="@+id/btn_stop"
        android:layout_alignLeft="@+id/btn_stop"
        android:layout_alignStart="@+id/btn_stop"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_pause"
        android:id="@+id/btn_pause"
        android:layout_alignBottom="@+id/btn_play"
        android:layout_toRightOf="@+id/btn_forward"
        android:layout_toEndOf="@+id/btn_forward"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/songtitle"
        android:id="@+id/songtitletextview"
        android:layout_alignRight="@+id/btn_pause"
        android:layout_alignEnd="@+id/btn_pause"
        android:layout_above="@+id/btn_play"
        android:layout_alignLeft="@+id/btn_stop"
        android:layout_alignStart="@+id/btn_stop"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loop"
        android:id="@+id/checkBox"
        android:layout_marginTop="285dp"
        android:layout_below="@+id/btn_forward"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/btn_forward"
        android:layout_alignLeft="@+id/btn_back"
        android:layout_alignStart="@+id/btn_back"
        android:layout_alignRight="@+id/songtitletextview"
        android:layout_alignEnd="@+id/songtitletextview"
        android:layout_marginTop="260dp"
        android:max="100"
        android:progress="1"
    />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/albumcover"
        android:layout_above="@+id/songtitletextview"
        android:layout_alignLeft="@+id/songtitletextview"
        android:layout_alignStart="@+id/songtitletextview"
        android:layout_marginBottom="27dp"
        android:minHeight="160dp"
        android:minWidth="160dp"
        android:layout_marginTop="20dp"/>


</RelativeLayout>
