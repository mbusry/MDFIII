<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.usrymichael.mobileplayer.MainActivity" >

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="170dp"
        android:text="@string/btn_stop" />

    <Button
        android:id="@+id/btn_forward"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_forward"
        android:layout_alignBaseline="@+id/btn_back"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_play"
        android:layout_above="@+id/btn_back"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_back"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="@string/btn_back"
        android:layout_below="@+id/btn_stop"
        android:layout_alignLeft="@+id/btn_stop"
        android:layout_alignStart="@+id/btn_stop"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_pause"
        android:id="@+id/btn_pause"
        android:layout_alignBottom="@+id/btn_play"
        android:layout_toRightOf="@+id/btn_forward"
        android:layout_toEndOf="@+id/btn_forward"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/songtitle"
        android:id="@+id/songtitletextview"
        android:layout_alignRight="@+id/btn_pause"
        android:layout_alignEnd="@+id/btn_pause"
        android:layout_above="@+id/btn_play"
        android:layout_alignLeft="@+id/btn_stop"
        android:layout_alignStart="@+id/btn_stop"/>

</RelativeLayout>
