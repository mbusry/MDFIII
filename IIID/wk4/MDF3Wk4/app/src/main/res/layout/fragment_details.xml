<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_done"
            android:layout_gravity="center_horizontal"
            android:text="@string/btn_done"
/>


</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/image_title"
        android:id="@+id/textViewImageTitle"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DetailsImageTitleTextView"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@android:style/Theme.Holo.Light.Dialog"
        android:text="Title"
        android:textColor="#ffff0d35"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/image_desc"
        android:id="@+id/textView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DetailsImageDescriptionTextView"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@android:style/Theme.Holo.Light.Dialog"
        android:text="Description"
        android:textColor="#ffff0d35"
        android:textSize="24dp"
        android:textStyle="bold"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DetailsPictureimageView"
        android:layout_gravity="center_horizontal"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:maxHeight="100dp"
        android:maxWidth="100dp"/>



</LinearLayout>