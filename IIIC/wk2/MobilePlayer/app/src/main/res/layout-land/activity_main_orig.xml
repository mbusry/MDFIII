<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.usrymichael.mobileplayer.MainActivity" >


    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_stop"
        android:layout_alignTop="@+id/btn_forward"
        android:layout_toEndOf="@+id/btn_forward"/>

    <Button
        android:id="@+id/btn_forward"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_forward"
        android:layout_toEndOf="@+id/btn_back"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_play"
        android:layout_below="@+id/songtitletextview"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/btn_back"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_back"
        android:layout_toEndOf="@+id/btn_play"
        android:layout_alignTop="@+id/btn_play"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_pause"
        android:id="@+id/btn_pause"
        android:layout_alignTop="@+id/btn_stop"
        android:layout_toEndOf="@+id/btn_stop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/songtitle"
        android:id="@+id/songtitletextview"
        android:layout_toStartOf="@+id/progressBar"
        android:layout_above="@+id/progressBar"
        />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/albumcover"
        android:minHeight="160dp"
        android:minWidth="160dp"
        android:layout_toEndOf="@+id/songtitletextview"
        android:layout_above="@+id/songtitletextview"
        android:layout_centerHorizontal="true"/>

    <SeekBar
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/btn_pause"
        android:layout_alignParentEnd="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/random"
        android:id="@+id/checkBox"
        android:layout_gravity="center_horizontal"
        android:layout_toEndOf="@+id/btn_back"
        android:layout_toStartOf="@+id/btn_pause"
        android:layout_alignBaseline="@+id/songtitletextview"
        android:layout_alignBottom="@+id/songtitletextview"/>



</RelativeLayout>
